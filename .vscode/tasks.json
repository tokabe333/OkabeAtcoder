{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe アクティブなファイルのビルド",
			"command": "g++",
			"args": [
				"-std=gnu++17",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-I",
				"${workspaceFolder}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "デバッガーによって生成されたタスク。"
		}
	],
	"version": "2.0.0"
}